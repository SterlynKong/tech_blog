<div class="posts">
    {{#each posts as |post|}}
    <article class="card">
        <div class="card-header flex-row justfy-space-between">
            <h2>
                <a href="/post/{{id}}">{{title}}</a>
            </h2>
            <div>
                Post written by: {{User.username}} - {{format_date createdAt}}
            </div>
        </div>
        <div class="card-body">
            {{body}}
        </div>
    </article>
    {{/each}}
</div>