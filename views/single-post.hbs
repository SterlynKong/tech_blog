<div class="post">
    <article class="card">
        <div class="card-header flex-row justify-space-between">
            <h2>{{post.title}}</h2>
            <div>
                Posted written by: {{post.User.username}} - {{format_date post.createdAt}}
            </div>
        </div>
        <div class="card-body">
            {{post.body}}
        </div>
    </article>

    {{#if post.Comments}}
    <section>
        <div>
            <h2>Comments:</h2>
        </div>

        <div>
            {{#each post.Comments}}
            <div class="comment">
                <p>
                    {{body}}
                </p>
                <p>
                    &mdash; {{User.username}}, {{format_date createdAt}}
                </p>
            </div>
            {{/each}}
        </div>
    </section>
    {{/if}}

    <form id="new-comment-form" class="card">
        <div class="card-header">
            <h3>Add New Comment</h3>
        </div>

        <div class="card-body">
            <input type="hidden" name="post-id" value="{{post.id}}" />

            {{!-- <label class="form-label" for="comment-body">Comment</label> --}}

            <textarea name="comment-body" class="form-input"></textarea>

            <button type="submit" class="btn">Submit</button>
        </div>
    </form>
</div>

<script src="/javascript/comment.js"></script>